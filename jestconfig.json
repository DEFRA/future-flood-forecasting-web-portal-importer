{
  "collectCoverage": true,
  "collectCoverageFrom": [
    "**/*.js",
    "**/*.mjs",
    "!**/node_modules/**",
    "!**/testing/**",
    "!**/vendor/**",
    "!**/test.*"
  ],
  "coverageDirectory": "testing/coverage",
  "coverageReporters": [
    "text",
    "lcov"
  ],
  "coverageThreshold": {
    "global": {
      "branches": 85,
      "functions": 90,
      "lines": 90,
      "statements": 90
    }
  },
  "resetMocks": true,
  "restoreMocks": true,
  "resetModules":true,
  "testEnvironment": "node",
  "moduleFileExtensions": ["js", "json", "jsx", "ts", "tsx", "node", "mjs"],
  "transform": {
    "^.+\\.[t|j]sx?$": "babel-jest",
    "^.+\\.mjs$": "babel-jest"
  } 
}
